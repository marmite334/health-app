<h1>フリーチャット</h1>
<%= form_with url: "/chats", method: :post,id: "form" do |f| %>
  <div class="field">
    <%= f.text_field :text, id: "text" %>
  </div>
  <div class="actions">
    <%= f.submit "送信する", class: :form__btn, id: "submit" %>
  </div>
<% end %>

<div id="list">
</div>

<% if @chats.present? %>
  <% @chats.each do |chat| %>
  <li>
    <div>
      <span>
        <%= link_to chat.user.nickname, user_path(chat.user.id) %>
      </span>
      <span>
        <%= chat.created_at %>
      </span>
      <% if current_user.id == chat.user.id %>
        <span>
          <%= link_to '削除', chat_path(chat.id), method: :delete %>
        </span>
      <% end %>
      <div>
        <span>
        <%= chat.text %>
        </span>
      </div>
    </div>
  </li>
  <% end %>
<% else %>
  <li>
    <div>
      <h3>
        <%= link_to 'ユーザーネーム', '#' %>
      </h3>
      <span>
        投稿日時
      </span>
      <div>
        <span>
        本文を表示
        </span>
      </div>
    </div>
  </li>
<% end %>
